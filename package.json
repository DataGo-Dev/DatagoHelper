{
  "name": "datago-helper",
  "version": "1.0.4",
  "description": "Agenda pull diário dos seus repositórios Git (09:30 ou ao iniciar o PC).",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/luanhenrique/DatagoHelper.git"
  },
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "prepare-release": "node scripts/copy-to-release.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.datago.helper",
    "productName": "Datago Helper",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "luanhenrique",
      "repo": "DatagoHelper",
      "private": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}